<h1>Create a New Post</h1>

<%= form_with model: @post, local: true do |form| %>
  <div>
    <%= form.label :title, "Enter Post Title" %>
    <%= form.text_field :title, placeholder: "Enter post title" %>
  </div>

  <div>
    <%= form.label :content, "Enter Post Content" %>
    <%= form.text_area :content, placeholder: "Enter post content" %>
  </div>

  <div>
    <%= form.submit "Create Post" %>
  </div>
<% end %>
